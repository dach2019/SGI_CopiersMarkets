extends main

block main

    // Cards deck (Admin)
    .card-deck
        // Add admin card
        .card
            lottie-player(src='https://assets8.lottiefiles.com/packages/lf20_tf6wSv.json' background='transparent' speed='1' style='width: 100%; height: 200px;' loop='' autoplay='')
            .card-body
                h4.card-title Crear administrador
                p.card-text Agrega un nuevo registro si necesitas crear un nuevo administrador del sistema
                button.btn.btn-primary.btn-lg.btn-block(type='button' data-toggle='modal' data-target='#AddAdminModalForm' data-backdrop='static')
                    | Agregar
        // Search admin card
        .card
            lottie-player(src='https://assets9.lottiefiles.com/datafiles/Pfr5NhU9MuhGM5L/data.json' background='transparent' speed='1' style='width: 100%; height: 200px;' loop='' autoplay='')
            .card-body
                h4.card-title Consultar administrador
                p.card-text
                    | Consulta informaci&oacute;n relevante acerca de un administrador registrado en el sistema
                button.btn.btn-primary.btn-lg.btn-block(type='button' onclick="show_table('Admins');")
                    | Consultar
