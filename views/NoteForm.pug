extends main

block main
    .container.bg-light.rounded.m-0.p-0.mx-auto(style="width:100%; max-width:500px")
        .container.bg-primary.text-light.m-0.p-3.rounded-top
            -let title=mode+' Nota de inventario'
            h4.m-0=title
        .container.m-0.p-3
            form.form.needs-validation(id='Form' novalidate='' action='javascript:sendData();')
                .form-row
                    .col-md.mb-3
                        label No. Nota:
                        input.form-control(name="number" type='number' value=number readonly)
                    .col-md.mb-3
                        label Fecha de creaci&oacute;n:
                        input.form-control(name="date" type="text" value=date readonly)
                .form-row
                    .col-md.mb-3
                        label C&oacute;digo:
                        select.form-control(id="ItemCode" name="code" required='')
                            option(selected)=code
                            each item in items
                                option=item['code']
                        .invalid-feedback
                            | Por favor inserta el c&oacute;digo del &iacute;tem
                    .col-md.mb-3
                        label Nombre:
                        input.form-control(id="ItemName" name="name" value=name type='text' readonly)
                .form-row
                    .col-md.mb-3
                        label Tipo:
                        select.form-control(name="type" required='')
                            option(selected)=type
                            option Entrada
                            option Salida
                        .invalid-feedback
                            | Por favor selecciona el tipo de movimiento
                    .col-md.mb-3
                        label Cantidad:
                        input.form-control(name="quantity" value=quantity type='number' required='')
                        .invalid-feedback
                            | Por favor inserta la cantidad del &iacute;tem que se va a ajustar
                .form-group
                    label Motivo:
                    textarea.form-control(name="reason" rows='3' required='')=reason
                    .invalid-feedback
                            | Por favor inserta el motivo de la nota de inventario
                button.btn.btn-success.btn-lg.btn-block(type='submit') Guardar