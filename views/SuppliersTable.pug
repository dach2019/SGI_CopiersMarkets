extends main

block main

    table.table.bg-light.table-bordered.table-hover.table-responsive-md
        thead.thead-light
            tr
                th(scope='col') CC/NIT
                th(scope='col') Raz&oacute;n social
                th(scope='col') Contacto
                th(scope='col') Telefono
                th(scope='col') Correo
                th(scope='col') Direcci&oacute;n
                th(scope='col') Observaciones
                th(scope='col') Acciones
        tbody
            each supplier in suppliers
                tr
                    td #{supplier.id}
                    td #{supplier.name}
                    td #{supplier.contact}
                    td #{supplier.phone}
                    td #{supplier.email}
                    td #{supplier.address}
                    td #{supplier.obs}
                    td 
                        -let route='/suppliers/edit/'+supplier.id
                        a(id=supplier.id class='btn btn-warning search' href=route role='button')
