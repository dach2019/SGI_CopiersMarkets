extends main

block main

    // Cards deck (Users)
    .card-deck
        // Add user card
        .card
            lottie-player(src='https://assets8.lottiefiles.com/packages/lf20_tf6wSv.json' background='transparent' speed='1' style='width: 100%; height: 200px;' loop='' autoplay='')
            .card-body
                h4.card-title Crear usuario
                p.card-text Agrega un nuevo registro si necesitas crear un nuevo usuario en el sistema
                a.btn.btn-primary.btn-lg.btn-block(href="/users/add" role="button")
                    | Agregar
        // Search user card
        .card
            lottie-player(src='https://assets9.lottiefiles.com/datafiles/Pfr5NhU9MuhGM5L/data.json' background='transparent' speed='1' style='width: 100%; height: 200px;' loop='' autoplay='')
            .card-body
                h4.card-title Consultar usuario
                p.card-text
                    | Consulta informaci&oacute;n relevante acerca de un usuario registrado en el sistema
                a.btn.btn-primary.btn-lg.btn-block(href="/users/search" role="button")
                    | Consultar
